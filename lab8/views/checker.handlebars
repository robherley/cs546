<main class="container">
    <div class="card dialog">
        <form class="form">
            <label for="text">Checker Input:</label>
            <textarea name="text-input" id="text" placeholder="Enter a word or phrase!"></textarea>
            <label for="submit" class="none">Button To Submit Palindrome</label>
            <button id="submit">
                <i class="fa fa-question fa-2x" aria-hidden="true"></i>
            </button>
        </form>
    </div>
    <section class="card list-container">
        <div class="check">
            <h2>Previously Checked</h2>
            <button id="clear">Clear</button>
        </div>
        <div class="list-wrapper">
            <ul id="pali-list">
            </ul>
        </div>
    </section>
</main>